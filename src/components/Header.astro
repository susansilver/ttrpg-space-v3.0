---
import {
  Astronav,
  MenuItems,
  MenuIcon,
  Dropdown,
  DropdownItems,
  DropdownSubmenu,
} from "astro-navbar";
---

<header class="lg:flex padding-y-large gap-5">
  <Astronav>
    <div
      class="flex w-full lg:justify-between justify-start flex-col lg:flex-row lg:items-center margin-x-small"
    >
      <div
        class="flex flex-row gap-2 lg:justify-center lg:items-center justify-start"
      >
        <img src="/icons/mstile-150x150.png" class="lg:block hidden" />
        <div class="flex flex-col">
          <a
            href="/"
            class="no-underline hover:text-black-950 visited:text-black-950 text-5xl"
            ><strong>TTRPG Space</strong></a
          >

          <span class="uppercase">A Dimension 20 Fansite</span>
        </div>
      </div>
      <div id="menu-list">
        <div class="block lg:hidden margin-top-med">
          <MenuIcon class="btn h-16 w-16" />
        </div>

        <MenuItems class="hidden lg:flex">
          <ul class="flex flex-col lg:flex-row lg:gap-5 list-none lar">
            <li class="list-none"><a href="/about">About</a></li>
            <!--   <li><a href="/">Blog</a></li> -->
            <li class="list-none">
              <a href="/campaigns/short-story">Stories</a>
            </li>
            <li class="list-none">
              <Dropdown class="group">
                <button
                  class="border-0 rounded-none bg-transparent hover:bg-transparent m-0 p-0"
                >
                  <span
                    class="underline hover:text-primary-900 text-primary-950"
                  >
                    Dimension 20 â–¼</span
                  >
                  <!-- You can style when dropdown is `open` -->
                </button>
                <DropdownItems class="relative">
                  <div class="lg:absolute lg:top-0 bg-accent-300">
                    <ul class="list-none p-8">
                      <li class="list-none">
                        <a href="/campaigns">Campaigns</a>
                      </li>
                      <li class="list-none"><a href="/players">Players</a></li>
                      <li class="list-none"><a href="/gm">GM</a></li>
                      <li class="list-none">
                        <a href="/type">Campaign Type</a>
                      </li>
                    </ul>
                  </div>
                </DropdownItems>
              </Dropdown>
            </li>
            <!--  <li><a href="/campaigns">Campaigns</a></li>
            <li><a href="/players">Players</a></li>
            <li><a href="/gm">GM</a></li>
            <li><a href="/type">Campaign Type</a></li> -->
            <!--  <li><a href="/privacy-policy">Privacy Policy</a></li> -->
            <li class="list-none">
              <a href="https://www.patreon.com/susansilver" target="_blank"
                >Patreon</a
              >
            </li>
            <!--  <li><a href="/privacy-policy">Privacy Policy</a></li> -->
            <li class="list-none">
              <a href="/rss.xml">RSS</a>
              <li class="list-none">
                <a
                  href="mailto:suzza@susansilver.net"
                  class="p-3 bg-blue-brand rounded-xl visited:text-white-50 hover:bg-primary-900"
                  ><span class="text-white-50">Contact</span></a
                >
              </li>
            </li>
          </ul>
        </MenuItems>
      </div>
    </div>
  </Astronav>
</header>

<style>
  .btn-bg {
    border: 5px solid #4314bf;
    background-color: #7364ff;
    transition: color 0.3s ease-out;
    border-top-left-radius: 15px;
    border-bottom-right-radius: 15px;
    padding-inline: 1.5em;
    padding-block: 1em;
  }

  .btn-bg:hover {
    background-color: #4314bf;
    color: #fff;
  }
</style>
